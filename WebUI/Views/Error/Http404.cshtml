


@{
    ViewBag.Title = "Http404";
    Layout = null;
  }
    
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
        <meta name="keywords" content="@ViewBag.Keywords"/>
        <meta name="description" content="@ViewBag.Snippet"/>
        <meta name="robots" content="@ViewBag.Robots" />
        <meta http-equiv="content-type" content = "text/html;charset=utf-8"/>
        <link  rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Content/images/twitter.ico")">

        
        <title>@ViewBag.Title</title>
        
           @if (HttpContext.Current.IsDebuggingEnabled)
                {
                    <link href="@Url.Content("~/Content/Bootstrawesome.css")" rel="stylesheet" type="text/css" />
                    <link href="@Url.Content("~/Content/themes/jquery-ui-1.10.4.custom.min.css")" rel="stylesheet" type="text/css" />            
                    @*<link href="@Url.Content("~/Content/LightBox/screen.css")" rel="stylesheet" type="text/css" />
                    <link href="@Url.Content("~/Content/LightBox/lightbox.css")" rel="stylesheet" type="text/css" />
                    <link href="@Url.Content("~/Content/Site2.css")" rel="stylesheet" type="text/css" />*@
                }
                else
                {
                    <link href="@Url.Content("~/Content/main.min.css")" rel="stylesheet" type="text/css" />
                   @* <link href="@Url.Content("~/Content/files.min.css")" rel="stylesheet" type="text/css" />*@
                }
        

    </head>
    <body>
        
        <style>
            
            body {
                margin: 0;
                background-color: gold;
            }

            div.error-404 {
                /*background-image: url('../../Content/images/cat.jpg');*/
                width: 100%;
                height: 1080px;
                top: 0;
                float: left;
                position: absolute;
                z-index: 2;
            }

            div.label-404 {
                position: absolute;
                top: 0;
                z-index: 10;
                border: 4px dashed yellow;
                margin: 40px;
                padding: 20px;
                background-color: pink;
                opacity: 0.8;
                font-family: Tahoma;
                font-size: 18px;

                   
            }
    </style>
    
        <div class="label-404">
            <h2>Ошибка 404</h2>
            <p>Страница @ViewBag.NotFoundUrl не найдена</p>
            <p>Вернуться @Html.ActionLink("на главную","List","Product")</p>
        
        </div>
        
        @*<div class="error-404 img-responsive"></div>*@
        <div class="item"><img src="@Url.Content("~/Content/images/cat.jpg")" alt="3" class="img-responsive"/></div>
        
        
        
        
        
          @if (HttpContext.Current.IsDebuggingEnabled)
        {
            <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/js/jquery-ui-1.9.2.custom.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/js/bootstrap.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
            
            <script src="@Url.Content("~/Scripts/js/commonTmp.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/js/grid-listTMP.js")" type="text/javascript"></script>
        }
        else
        {
            <script src="@Url.Content("~/Scripts/js/engine.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/js/common_one.min.js")" type="text/javascript"></script>
        }

    </body>
</html>






