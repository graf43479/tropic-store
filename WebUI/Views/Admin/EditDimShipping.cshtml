        <div class="editor-field"> @Html.EditorFor(model => model.ShippingPrice)</div>    *@
    
        @* <div class="editor-field"> @Html.CheckBoxFor(model => model.isActive) &nbsp; Активен</div>*@
    
    
        @* <div class="editor-field"> @Html.HiddenFor(model => model.TotalValue)</div>    
    
       *@
   
        
        
    </div>
    
    <div class="col-lg-12 col-md-12" style="padding: 4px 0 10px 0 ">
    <input type="submit" class="col-lg-offset-10 col-md-offset-10 col-lg-2 col-md-2 btn btn-info btn-md" value="Сохранить" />
    </div>
   @*<p>@Html.ActionLink("Перейти в меню администратора", "Actions")</p>*@
}



