<div class="row" style="margin-top: 7px">
    <div class="col-lg-12 col-md-12">
              @using (Html.BeginForm("UserRoles", "Admin", FormMethod.Get, new { @class = "form-horizontal", @style = "margin: 0 20px; padding: 0 20px;" }))
