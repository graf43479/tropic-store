            <div class="form-group">
            <label class="col-lg-1 col-md-1">Поиск</label>
                <div class="col-lg-4 col-md-4" style="padding: 7px 0 0 0;">@Html.TextBox("searchWord", null, new { @class = "form-control", @placeholder = "Введите поисковый запрос" })</div>
                
                <label class="col-lg-1 col-md-1">Роль</label>
                <div class="col-lg-4 col-md-4" style="padding: 7px 10px 0 0;">@Html.DropDownList("roleId", "-- Все --")</div>
            
            
                <input class="btn btn-info btn-md col-md-2 col-lg-2" value="Поиск" type="submit" style="margin-top: 7px; "/>
            
            </div>
       
