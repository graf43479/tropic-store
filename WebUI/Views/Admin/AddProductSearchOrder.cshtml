    @using (Html.BeginForm("AddProductIntoOrder", "Admin", FormMethod.Get, new { @class = "form-horizontal", @style = "margin: 0 20px; padding: 0 20px;" }))
    {
        <div class="form-group">
            <label class="col-lg-2 col-md-2 form-control-static">Поиск</label>
            <div class="col-lg-10 col-md-10" style="padding: 7px 0 0 0;">@Html.TextBox("searchWord", null, new { @class = "form-control", @placeholder = "Введите поисковый запрос" })</div>
            <div>@Html.HiddenFor(x=>x.OrderSummaryID, "orderSummaryID")</div>
        </div>

        <div class="form-group">
            
            <input class="btn btn-info col-lg-offset-1 col-md-offset-1 col-md-2 col-lg-2 " value="Поиск" type="submit" />

        </div>
        
          
