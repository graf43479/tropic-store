@model Domain.Entities.OrdersSummary

@{
    ViewBag.Title = "Admin: Редактирование " + @Model.OrderNumber;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
  
  <style type="text/css">
        form 
        {
            border: 0;
    }
</style>

<ul class="breadcrumb">
    @{
        <li><a href="@Url.Action("Actions", "Admin")">Главная</a> <span class="divider">/</span></li>
        <li class=""><a href="@Url.Action("Orders", "Admin")">Заказы</a> <span class="divider">/</span></li>
        <li class="active"><a href="@Url.Action("EditOrderSummary", "Admin", new { orderSummaryID = @Model.OrderSummaryID })"   class = "linkButton">Редактировать заказ №@Model.OrderNumber</a> <span class="divider">/</span></li>
    }
</ul>
@{

@*    <p>@DateTime.Now</p>*@
}
<h2>Редактировать заказ</h2>
<div class="col-lg-12 col-md-12" style="padding: 0"> 
@using (Html.BeginForm("EditOrderSummary", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="editor-field"> @Html.HiddenFor(model => model.OrderSummaryID) </div>
    <div class="editor-field"> @Html.HiddenFor(model => model.UserID)</div>
      <div class="editor-field"> @Html.HiddenFor(model => model.TotalValue)</div>    

    <div class="col-lg-12 col-md-12" style="padding: 2px 0"> 
     <div class="form-group" style="padding: 0"> 
   
    <div class="col-lg-2 col-md-2" style="padding: 0"> @Html.Label("Номер заказа")</div>    
         <div class="col-lg-4 col-md-4" style="padding: 0"> @Html.TextBoxFor(model => model.OrderNumber, new { @class = "form-control" })</div>    
  
         <div class="col-lg-2 col-md-2" style="padding: 0 5px 0 0; text-align:  right"> @Html.Label("Cумма без доставки")</div>    
         <div class="col-lg-4 col-md-4" style="padding: 0">  @Html.TextBoxFor(model => model.TotalValue, new { disabled = "disabled", @class = "form-control" })</div>    
