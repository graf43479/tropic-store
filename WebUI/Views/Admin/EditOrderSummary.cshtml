        <div class="col-lg-4 col-md-4" style="padding: 0"> @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })</div>    

        <div class="col-lg-2 col-md-2" style="padding: 0 5px 0 0; text-align: right"> @Html.Label("Телефон")</div>    
         <div class="col-lg-4 col-md-4" style="padding: 0"> @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })</div>    
         </div>
     </div>

             
         <div class="col-lg-12 col-md-12" style="padding: 2px 0"> 
     <div class="form-group" style="padding: 0"> 
        <div class="col-lg-2 col-md-2" style="padding: 0"> @Html.Label("Адрес доставки")</div>    
     <div class="col-lg-10 col-md-10" style="padding: 0"> @Html.TextAreaFor(model => model.UserAddress, new { @class = "form-control" })</div>    
   </div></div>
      
    
    <div class="col-lg-12 col-md-12" style="padding: 2px 0"> 
     <div class="form-group" style="padding: 0"> 
   
        <div class="col-lg-2 col-md-2" style="padding: 0"> @Html.Label("Email")</div>    
        <div class="col-lg-4 col-md-4" style="padding: 0"> @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })</div>    

        <div class="col-lg-2 col-md-2" style="padding: 0 5px 0 0; text-align: right"> @Html.Label("Дата заказа")</div>    
         <div class="col-lg-4 col-md-4" style="padding: 0"> @Html.TextBoxFor(model => model.TransactionDate, new { @class = "form-control" })</div>    
         </div>
     </div>
    
    
    <div class="col-lg-12 col-md-12" style="padding: 2px 0"> 
        <div class="form-group" style="padding: 0"> 
   
            <div class="col-lg-2 col-md-2 form-control-static" style="padding: 0"> @Html.Label("Способ доставки")</div>    
            <div class="col-lg-4 col-md-4" style="padding: 0"> @Html.TextBoxFor(model => model.ShippingType, new { @class = "form-control" })</div>    

             <div class="col-lg-offset-2 col-md-offset-2 col-lg-1 col-md-1 " style="padding: 0"> @Html.CheckBoxFor(model => model.IsActive)</div>    
         <div class="col-lg-2 col-md-2 form-control-static" style="padding: 0"> @Html.Label("Активен")</div>    
        </div>
    </div>
    
    <div class="col-lg-12 col-md-12" style="padding: 0"> 
