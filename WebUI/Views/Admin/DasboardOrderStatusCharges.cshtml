@model IEnumerable<WebUI.Models.DasboardOrderStatusChargeModel>
@using MvcContrib.UI.Grid
 <div id="DasboardOrderStatusCharges" style="padding: 0">
@Html.Grid(Model).Columns(column =>
    {
        column.For(x => x.DimOrderStatusDesc).Named("Статус заказа").Attributes(x =>
        {
            return new Dictionary<string, object> { { "style", "text-align: left; padding-left: 5px;" } };
        });
        column.For(x => x.AllTimeCharge).Named("Всего");
        column.For(x => x.YaerlyCharge).Named("Год");
        column.For(x => x.MonthlyCharge).Named("Месяц");
        column.For(x => x.WeeklyCharge).Named("Неделя");
        column.For(x => x.DailyCharge).Named("День");      
        
    }
                  ).Attributes(@class => "table table-striped table-bordered table-hover table-condensed grid-style").Empty("Нет данных")
              

@Ajax.ActionLink(" ", "Dasboard", new { dashboardAction = "DasboardOrderStatusCharges" }, new AjaxOptions  //new { dashboardAction = "DasboardOrderStatusCount" }
    {
        UpdateTargetId = "DasboardOrderStatusCharges",
        HttpMethod = "GET",
        InsertionMode = InsertionMode.Replace,
        OnBegin = "gifLoaderBefore",
        OnSuccess = "gifLoaderAfter",
        OnFailure = "gifLoaderAfter",
        OnComplete = "gifLoaderAfter"
      //  OnFailure = "alert('Error')",
      //  OnSuccess = "alert('Sucess')"
    }, new { @class = "glyphicon glyphicon-refresh btn btn-md btn-info", @style = "float: right; margin: -7px -10px 5px 0px;" })

    
    </div>