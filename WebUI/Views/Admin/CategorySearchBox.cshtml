                    </div>
                </div>
                <div class="col-lg-12 col-md-12" style="height: 5px;"></div>
                <div class="form-group" style="margin-top: 10px; padding-top: 10px;">
                    <label  class="col-lg-2 col-md-2 form-control-static" style="">Надкатегории:</label>
                    <div class="col-lg-5 col-md-5" >
                        @Html.DropDownList("superCategoryId", "-- Все --")
                    </div>

                    <label class="col-lg-2 col-md-2"></label>
                    <input class="btn btn-info col-md-3 col-lg-3" value="Поиск" type="submit" style=""/>
                </div>
            }
        </div>
    </div>
}


<script>

    $(document).ready(function () {
        $("#categoryActivity, #superCategoryId").addClass("form-control");

    });
</script>