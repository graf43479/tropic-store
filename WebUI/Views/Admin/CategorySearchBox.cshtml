    <div class="row">
        <div class="col-lg-12 col-md-12" style="margin-bottom: 5px;">
        

            @using (Html.BeginForm("Categories", "Admin", FormMethod.Get, new {@class = "form-horizontal", @style = "margin: 0 20px; padding: 0 20px;"}))
            {
                <div class="form-group">
                    <label class="col-lg-2 col-md-2 form-control-static">Поиск</label>
                    <div class="col-lg-5 col-md-5" >@Html.TextBox("searchWord", null, new {@class = "form-control", @placeholder = "Введите поисковый запрос"})</div>
        
                    <label  class="col-lg-2 col-md-2 form-control-static" style="text-align: right; padding-right: 10px;">Категории:</label>
                    <div class="col-lg-3 col-md-3" style="padding: 0px;">
                        @Html.DropDownList("categoryActivity", new SelectList(new[] {"Активные", "Пустые", "Все"}))
                
