@model IEnumerable<Domain.Entities.Product>

<br/>
@{
    if (Model.Count() > 0)
    {
        <div class="heading">
        <h2>С этим товаром часто приобретают</h2>
        </div>
        <div id="productList">
            @foreach (var p in Model)
            {
                @Html.Partial("ProductSummary", p);
            }
        </div>
    }
    else
    {
        <div></div>
    }
}


