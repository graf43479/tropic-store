    <div>@Html.ValidationSummary(true)</div>
    <div class="form-group has-feedback">
        <label class="control-label">Имя:</label> 
        <div>
            @Html.TextBoxFor(x => x.UserName, new { @placeholder = "Введите имя", @class = "form-control" }) 
            <span class="glyphicon glyphicon-pencil form-control-feedback"></span>
        </div> 
        @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "help-inline" })
    </div>
    
    
    <div class="form-group has-feedback">
        <label class="control-label">Email:</label> 
        <div>@Html.TextBoxFor(x => x.Email, new { @placeholder = "Введите Ваш Email", @class = "form-control" }) 
            <span class="glyphicon glyphicon-pencil form-control-feedback"></span>
            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "help-inline" })</div>
    </div>
    
    
    <div class="form-group has-feedback">
        <label class="control-label">Логин:</label> 
        <div>@Html.TextBoxFor(x => x.Login, new { @placeholder = "Введите логин", @class = "form-control" }) 
            <span class="glyphicon glyphicon-pencil form-control-feedback"></span>
            @Html.ValidationMessageFor(x => x.Login, null, new { @class = "help-inline" })</div>
    </div>
    
    <div class="form-group has-feedback">
        <label class="control-label">Пароль:</label> 
        <div>@Html.PasswordFor(x => x.Password, new { @placeholder = "Введите пароль", @class = "form-control" }) 
            <span class="glyphicon glyphicon-pencil form-control-feedback"></span>
            @Html.ValidationMessageFor(x => x.Password, null, new { @class = "help-inline" })</div>
    </div>
    
    
    <div class="form-group has-feedback">
        <label class="control-label">Повтор:</label> 
        <div>@Html.PasswordFor(x => x.ConfirmPassword, new { @placeholder = "Повторите введенные пароль", @class = "form-control" }) 
            <span class="glyphicon glyphicon-pencil form-control-feedback"></span>
            @Html.ValidationMessageFor(x => x.ConfirmPassword, null, new { @class = "help-inline" })</div>
    </div>
    
    
    
    <div class="form-group has-feedback">
        <label class="control-label">Телефон:</label> 
        <div>@Html.TextBoxFor(x => x.Phone, new { @placeholder = "Введите номер телефона", @class = "form-control" }) 
            <span class="glyphicon glyphicon-pencil form-control-feedback"></span>
            @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "help-inline" })</div>
    </div>
    
    
    <div class="form-group">
        <div class="">@Html.CheckBoxFor(x => x.Mailing, new { @checked = "checked" }) @Html.ValidationMessageFor(x => x.Mailing)<label>Подписаться на рассылку:</label> </div>
        
    </div>
   
   <div class="form-group">
       <div class="">
           <button type="submit" class="btn btn-custom btn-md" value="">Готово</button>
       </div>
   </div>
}
</div>
