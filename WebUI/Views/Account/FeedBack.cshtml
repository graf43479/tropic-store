@model Domain.Entities.FeedBack
           
@{
    ViewBag.Title = "Обратная связь";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Robots = "nofollow, noindex";   
}

<div id="crumbs" class="row">
 <ul class="exbreadcrumb">
        @{
                <li><a href="@Url.Action("List", "Product")"  rel="follow, index">Главная</a></li>
                <li class="active"><a href="@Url.Action("FeedBackModal", "Account")" rel="follow, index">Обратная связь</a></li>
            }
    </ul>
    </div>

@if (TempData["message"] != null)
                                {
                                    <div class="message"><p class="@TempData["messageType"]">@TempData["message"]</p></div>
                                }
<div class="heading">
    <h1>Обратная связь</h1>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    @using (Html.BeginForm("FeedBackModal","Account"))
    {
        @*<p>@p</p>*@
        <p>@Html.ValidationSummary(true)</p>
        
       <div class="form-group has-feedback"><label>Ваше имя: </label> @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                   <span class="glyphicon glyphicon-pencil form-control-feedback"></span>
           @Html.ValidationMessageFor(x => x.Name)</div>
        <div class="form-group has-feedback"><label>Email: </label>@Html.TextBoxFor(x => x.FeedBackEmail, new { @class = "form-control" }) 
            <span class="glyphicon glyphicon-pencil form-control-feedback"></span>
            @Html.ValidationMessageFor(x => x.FeedBackEmail)</div>
        <div class="form-group"><label>Вопрос: </label>@Html.TextAreaFor(x => x.Question, new { @class = "form-control", @style="min-height: 120px;" }) 
            @Html.ValidationMessageFor(x => x.Question)</div>        
        /*<p>@Html.CheckBoxFor(x=>x.RememberMe) Запомнить меня</p>*/

       
        <input type="submit" class="btn btn-custom btn-md" style="" value="Отправить"/> 
        
    
    
        
    
    
    }
</div>

<div id="updateDialog4" title="Смена пароля"></div>



